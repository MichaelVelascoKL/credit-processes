        "../{{context.debtCapacity_ref.link}}"
      ],
      "exposed" : false
    },
    "submit_errors_list" : {
      "type" : "expression",
      "value" : [
        "if($data.formOutput && $data.formOutput._submitError && $data.formOutput._submitError.explanations){",
        "\tconst liElements = $data.formOutput._submitError.explanations",
        "\t\t.filter(cause => cause !== null)",
        "\t\t.map(cause => \"<li>\" + cause + \"</li>\")",
        "\t\t.join('');",
        "\tif(liElements){",
        "\t\treturn \"<ul>\" + liElements + \"</ul>\";",
        "\t}",
        "}"
      ],
      "exposed" : false
    },
    "formOutput" : {
      "type" : "expression",
      "value" : [
        "if( $data.debtCapacity ){",
        "\treturn {",
        "\t\t//map debtCapacity variable to expected task contract input",
        "\t\tdebtCapacityInput: {",
        "\t\t\tdebtCapacityAmount: $data.debtCapaciryAmount,",
        "\t\t\tdebtCapacityStatus: $data.debtCapacityStatus,",
        "\t\t\tdebtCapacityReason: $data.debtCapacity.debtCapacityReason !== undefined ? $data.debtCapacity.debtCapacityReason : null",
        "\t\t}",
        "\t}",
        "}"
      ],
      "exposed" : false
    },
    "context" : {
      "type" : "url",
      "value" : [
        "../API/bpm/userTask/{{taskId}}/context"
      ],
      "exposed" : false
    },
    "taskId" : {
      "type" : "urlparameter",
      "value" : [
        "id"
      ],
      "exposed" : false
    },
    "businessObject" : {
      "type" : "url",
      "value" : [
        "../{{context.businessObject_ref.link}}"
      ],
      "exposed" : false
    },
    "debtCapaciryAmount" : {
      "type" : "expression",
      "value" : [
        "return (($data.businessObject.totalIncome-$data.businessObject.fixedExpenses)*0.35);"
      ],
      "exposed" : false
    },
    "debtCapacityStatus" : {
      "type" : "expression",
      "value" : [
        "return $data.debtCapaciryAmount > $data.businessObject.amountRequested"
      ],
      "exposed" : false
    }
